# Zero Config Environment Variables Example
# Copy this file to .env.zero_config and customize as needed

# API Keys (most important for zero-config experience)
openai_api_key=your_openai_api_key_here
anthropic_api_key=your_anthropic_api_key_here
google_api_key=your_google_api_key_here

# Core LLM Settings
default_model=gpt-4o-mini
temperature=0.0
max_tokens=1024
timeout=30
max_retries=3

# Provider Settings
ollama_base_url=http://localhost:11434/v1
# openai_base_url=  # Leave empty for default
# anthropic_base_url=  # Leave empty for default

# Logging Settings
log_calls=false
log_to_db=true
log_json=false
log_level=INFO
db_path=llm_calls.db

# Search Settings
duckduckgo_max_results=5
duckduckgo_timeout=10

# API Server Settings
api_host=0.0.0.0
api_port=8818
admin_username=admin
admin_password=admin

# Model Lists (comma-separated)
# openai_models=gpt-4o,gpt-4o-mini,gpt-4-turbo,gpt-3.5-turbo
# anthropic_models=claude-3-5-sonnet-20241022,claude-3-haiku-20240307
# google_models=gemini-1.5-flash-latest,gemini-1.5-pro-latest
